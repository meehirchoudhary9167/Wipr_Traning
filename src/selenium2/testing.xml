<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="DemoWebShopSuite">
  
  <!-- Parameters accessible by all tests -->
  <parameter name="browserName" value="Chrome"/>
  <parameter name="url" value="https://demowebshop.tricentis.com/"/>

  <!-- First test group -->
  <test thread-count="5" name="SmokeTests">
    <groups>
      <define name="one time run">
        <include name="smoke"/>
      </define>
    </groups>
    <classes>
      <class name="Day22.Practice_DemoWebShop"/>
    </classes>
  </test>

  <!-- Second test group (disabled) -->
  <test thread-count="5" name="DisabledTest" enabled="false">
    <classes>
      <class name="Day21.Annotation">
        <methods>
          <include name="beforeClass"/>
          <include name="loginTest"/>
        </methods>
      </class>
    </classes>
  </test>

</suite>
